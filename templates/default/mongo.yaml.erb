instances:
  <% @instances.each do |i| -%>
  - server: mongodb://<%= i['host']%>:<%= i['port'] %>
    <% if i.key?('tags') -%>
    tags:
      <% i['tags'].each do |t| -%>
    - <%= t %>
      <% end -%>
    <% end -%>

    <% if i.key?('additional_metrics') -%>
    additional_metrics:
      <% i['additional_metrics'].each do |a_m| -%>
    - <%= a_m %>
      <% end -%>
    <% end -%>

    <% if i.key?('collections') -%>
    collections:
      <% i['collections'].each do |c| -%>
    - <%= c %>
      <% end -%>
    <% end -%>

  <% end -%>

init_config:
# No init_config details needed
